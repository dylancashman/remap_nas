{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": false,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "node"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "lib": [
            "es2015",
            "dom",
            "dom.iterable",
            "scripthost"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.json",
        "src/**/*.svg",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "data/*.json"
    ],
    "exclude": [
        "node_modules"
    ]
}